{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["esnext"],
        // Dev types are JIT
        "types": ["lua-types/jit", "@typescript-to-lua/language-extensions"],
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true
    },
    "include": ["src"]
}
